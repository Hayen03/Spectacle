<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Spectacle.Titre" parent="@style/Base.TextAppearance.AppCompat.Title" >
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#005066</item>
    </style>
    <style name="Spectacle.Titre.Small" parent="Spectacle.Titre">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Spectacle.Corp" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Spectacle.Edit" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Spectacle.Small" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="Spectacle.Bouton" parent="@style/Widget.AppCompat.Button">

    </style>

</resources>
