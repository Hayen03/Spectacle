<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="#efefef"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ReservationImageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/clef_100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#efefef"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingLeft="5dp">


            <TextView
                android:id="@+id/reservationSpecTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_titre"
                android:textColor="#006699"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reservationSpecDateLabel"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/str_date"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reservationSpecDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/str_date"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reservationSpecArtiste"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/str_artiste"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reservationSpecListArtistes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="0dp"
                    android:text="Liste artistes"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="#efefef"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservationSectionLabelNum"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="#"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/reservationSectionLabelName"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="Section"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/reservationSectionLabelPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="Prix"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/reservationSectionLabelNbFree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="Places disp."
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#efefef"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listViewSections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|clip_vertical|clip_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />
    </LinearLayout>



</LinearLayout>

